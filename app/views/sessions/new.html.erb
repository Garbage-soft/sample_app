<h1>ログインフォーム</h1>

<div class="">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
