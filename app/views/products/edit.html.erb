<h1>商品情報編集</h1>

<!-- Bootstrapを使用して暫定的に見た目を整えているが、ここのフォームはレイアウトを適した形に変更する -->

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @product, local: true) do |f| %>
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>

      <%= f.label :price, "価格" %>
      <%= f.text_field :price %>

      <%= f.label :stock, "在庫数" %>
      <%= f.text_field :stock %>

      <%= f.label :descripion, "商品概要" %>
      <%= f.text_field :description %>

      <%= f.submit "登録", class: "btn btn-primary" %>
      <%= link_to 'キャンセル', root_path, class: "btn btn-default btn-block" %>
    <% end %>
  </div>
</div>
