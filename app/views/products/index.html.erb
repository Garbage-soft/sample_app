<% @title = "商品一覧" %>
<h1><%= @title %></h1>

<% if admin_logged_in? %>
  <%= link_to '商品登録', 'products/new' %>
<% end %>

<ul>
  <% @products.each do |product| %>
    <div class="product-item">
      <div class="image">
        <%= image_tag product.display_image_index if product.image.attached? %>
      </div>
      <li>
        <p>商品名：<%= link_to product.name, product %></p>
        <p>価格：<%= product.price  %>円</p>
        <% if admin_logged_in? %>
          <%= link_to '編集', edit_product_path(product) %>
          <%= link_to 'この商品を削除', product, method: :delete, data: { confirm: "この商品を削除します" } %>
        <% end %>
      </li>
    </div>
  <% end %>
</ul>
